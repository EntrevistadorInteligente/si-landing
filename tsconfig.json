{
  "exclude": ["./dist/"],
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": "src",
    "strictNullChecks": true,
    "paths": {
      "@content/*": ["content/*"],
      "@components": ["components"],
      "@common": ["common/index"],
      "@data/*": ["data/*"],
      "@layouts": ["layouts"],
      "@pages": ["pages"],
      "@styles/*": ["styles/*"],
      "@i18n/*": ["i18n/*"],
    },
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ]
  }
}
