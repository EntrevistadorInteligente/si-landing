---
import { VIDEOS_PATH } from '@common';
import { Button } from '@components';
---

<section class="my-20" aria-labelledby="entrevista-titulo">
  <div class="container mx-auto px-4">
    <div class="grid place-items-center gap-4">
      <h2 id="entrevista-titulo" class="section-title mb-8 text-center">Una muestra de las entrevista</h2>
      <video class="relative z-10 mx-auto mt-20 w-full max-w-[860px] rounded-[16px] object-cover" loop autoplay muted>
        <source src={`${VIDEOS_PATH}/demo.mp4`} type="video/mp4" />
        Your browser does not support the video tag.
      </video>
      <!-- TODO: UPDATE URL -->
      <Button href="/test">Probar</Button>
    </div>
  </div>
</section>
